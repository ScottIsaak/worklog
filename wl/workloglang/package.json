{
	"name": "workloglang",
	"displayName": "WorklogLang",
	"description": "Adds a worklog language with intellisense and syntax highlighting.",
	"version": "1.2.0",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:worklog"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "worklog",
				"extensions": [
					".wl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "worklog",
				"scopeName": "source.worklog",
				"path": "./syntaxes/worklog.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}
